@model IEnumerable<SchoolWeb.Models.Student>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3 mt-4">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-muted">Students</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Student" asp-action="Create"><i class="bi bi-plus-circle"></i> &nbsp; Add New Student</a>
        </div>
        
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered table-striped mt-3" style="width: 100%">
            <thead>
                <tr class="table-dark">
                    <th>Student Index</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Action Detail</th>
                    <th>Action Update</th>
                    <th>Action Remove</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr class="table-light">
                        <td width="15%">@obj.ID</td>
                        <td width="15%">@obj.FirstName @obj.LastName</td>
                        <td width="15%">@obj.Email</td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-outline-info mx-2" asp-controller="Student" asp-action="Details" asp-route-id="@obj.ID"><i class="bi bi-info-square"></i> Info</a>
                            </div>
                        </td>
                        <td width="20%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-outline-success mx-2" asp-controller="Student" asp-action="Edit" asp-route-id="@obj.ID"><i class="bi bi-pencil-square"></i> Edit</a>
                            </div>
                        </td>
                        <td width="15%">
                            <div class="w-100 btn-group" role="group">
                                <a class="btn btn-outline-danger mx-2" asp-controller="Student" asp-action="Delete" asp-route-id="@obj.ID"><i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>