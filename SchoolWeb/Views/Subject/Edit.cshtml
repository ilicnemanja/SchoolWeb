@model Subject

<form method="POST" asp-action="Edit">
	<div class="border p-3 mt-5">
		<div class="row pb-2">
			<h3 class="text-success">Edit Subject</h3>
			<hr />
		</div>  
		<div class="text-danger" asp-validation-summary="All"></div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control"/>
			<span  class="text-danger" asp-validation-for="Name"></span>
		</div>

		<button type="submit" class="btn btn-success" style="width: 150px">Update Subject</button>
		<a asp-controller="Subject" asp-action="Index" class="btn btn-outline-muted">Back to Subject List</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}


